{
  "name": "Meta test templates",
  "version": "meta-test",
  "helpers": ["meta-helper"],
  "categories": ["meta"],
  "options": {
    "generator": {
      "appendDirectory": "zap-generated"
    }
  },
  "templates": [
    {
      "path": "test1.zapt",
      "name": "Test 1",
      "output": "test1.out"
    },
    {
      "path": "test2.zapt",
      "name": "Test ",
      "output": "out/test1.out"
    },
    {
      "path": "struct.zapt",
      "name": "Struct",
      "output": "struct.h"
    },
    {
      "path": "type-by-cluster.zapt",
      "name": "Types by cluster",
      "output": "type-by-cluster.h"
    },
    {
      "path": "access.zapt",
      "name": "Access data example",
      "output": "access.out"
    },
    {
      "path": "cluster_iterator.zapt",
      "name": "Cluster iterator.",
      "output": "cluster_out_{define:tolowercase}.out",
      "iterator": "selectedCluster"
    }
  ],
  "zcl": {
    "cluster": {
      "component": {
        "type": "text",
        "configurability": "hidden",
        "globalDefault": null,
        "label": "Cluster to Component dependency mapping",
        "defaults": "cluster-components.json",
        "autoEnableComponents": true
      }
    }
  }
}
